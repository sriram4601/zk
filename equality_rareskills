pragma circom 2.1.4;

// Input 3 values using 'a'(array of length 3) and check if they all are equal.
// Return using signal 'c'.

template Equality() {
   signal input a[3];
   signal output c;

   component isz1 = IsZero();
   component isz2 = IsZero();
   component isz3 = IsZero();

   isz1.in <== a[1] - a[2];
   isz1.out === 1;

   isz2.in <== a[2] - a[3];
   isz2.out === 1;

   isz3.in <== a[1] - a[3];
   isz3.out === 1;
}


component main  = Add();
